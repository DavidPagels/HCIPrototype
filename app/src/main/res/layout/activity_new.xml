<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.hciprototype.NewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add a new event"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventTitle"
        android:text=""
        android:hint="@string/event_title"
        android:singleLine="true"
        android:layout_alignTop="@+id/eventLabel"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/eventLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@id/eventTitle"
        android:layout_toStartOf="@id/eventTitle"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locMenu"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/locLabel"
        android:layout_alignLeft="@+id/eventTitle"
        android:layout_alignStart="@+id/eventTitle" />
    <TextView
        android:id="@+id/locLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/loc_label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/eventLabel"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@id/eventTitle"
        android:layout_toStartOf="@id/eventTitle"/>


</RelativeLayout>
